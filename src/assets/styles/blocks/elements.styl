.link
  linkDefault()
  display inline-block
  text-decoration none

  &:hover
    text-decoration underline

  &.-bold
    font-weight 500

  &.-red
    color $red

    &:hover
      color $red-light

    &:active
      color $red-darker

  &.-violet
    color $violet

    &:hover
      color $violet-hover

    &:active
      color $violet-active

  &.-blue
    color $blue-dark

    &:hover
      color $red-light

    &:active
      color $red-darker

.text-element
  &.-red
    color $red

.button-plus
  display block
  align-items center
  justify-content center
  width 14px
  height 14px
  background $violet
  position relative
  border-radius 2px
  transition background .1s linear

  &:before,
  &:after
    content ''
    display block
    background $white
    position absolute
    left 50%
    top 50%
    transform translate(-50%, -50%)

  &:after
    width 2px
    height 6px

  &:before
    width 6px
    height 2px

  &:hover
     background $violet-hover

  &:active
     background $violet-active

  &.-large
    width 24px
    height 24px
    border-radius 4px

    &:before,
    &:after
      border-radius 10px

    &:after
      width 4px
      height 12px

    &:before
      width 12px
      height 4px

.btn
  display inline-block
  border-width 0
  border-radius 4px
  text-decoration none
  text-align center
  box-sizing border-box
  cursor pointer
  font-family Roboto
  transition color .15s ease-in-out, border-color .15s ease-in-out, background .15s ease-in-out

  &.-disabled,
  &:disabled
  &[disabled]
    user-select none
    cursor not-allowed

    &:active
      transform translate(0, 0)

  &:active
    transform translate(0, 1px)

  &.-wide
    width 100%

  &.-social
    position relative
    padding 15px 24px 15px 42px
    font-weight 500
    line-height 32px
    font-size 21px
    text-align center
    min-width 226px
    box-sizing border-box

    .btn-icon
      position absolute
      left 17px
      top 50%
      transform translate(0, -50%)
      max-width 32px

      &.-facebook
        fill #3B5999

  &.-small
    font-size 14px
    letter-spacing 0
    line-height 16px
    font-weight 600
    padding 7px 19px

  &.-default
    font-size 14px
    letter-spacing 0
    line-height 16px
    font-weight 600
    padding 13px 28px 12px

  &.-smallMedium
    font-size 17px
    line-height 26px
    font-weight 600
    padding 9px 38px 7px

  &.-medium
    font-size 18px
    line-height 27px
    font-weight 600
    padding 13px 48px 14px

  &.-mediumLarge
    min-width 335px
    font-size 20px
    line-height 30px
    font-weight 600
    padding 15px 30px 13px
    border-width 2px

  &.-aboveMediumLarge
    min-width 226px
    font-size 20px
    line-height 30px
    font-weight 600
    padding 18px 30px 17px
    border-width 2px

  &.-large
    font-family 'Josefin Sans'
    font-size 26px
    font-weight 600
    line-height 34px
    text-align center
    padding 25px 48px 22px
    border-width 2px

  &.-facebook-btn
    padding-left 70px

  &.-google-btn
    padding-left 66px

  &.-dropbox-btn
    text-align left
    padding-left 50px !important
    max-width 180px

    svg.btn-icon
      left 14px

  &.-grey
    background $grey-lightest-main
    border-style solid
    border-color $grey-lightest-main
    color $violet

    &:hover,
    &:active
      border-color $violet

    &:active
      color $white
      background-color $violet

  &.-violet
    border none
    color $white
    background $violet

    &:hover
      background $violet-hover

    &:active
      background $violet-active

    &[disabled]
      background $violet
      opacity .25

  &.-red
    border none
    color $white
    background $red

    &:hover
      background $red-hover

    &:active
      background $red-active

    &[disabled]
      background $red
      opacity .25

    &.-disabled-grey
      &[disabled]
        background $grey-light
        opacity 1

  &.-transparent-red
    display inline-block
    color $error

  &.-redCold
    color $white
    background $redCold

    &:hover
      background $redCold-hover

    &:active
      background $redCold-active

    &[disabled]
      background $redCold
      opacity .25

  &.-orange
    color $white
    background $orangeHot

    &:hover
      background $orangeHot-hover

    &:active
      background $orangeHot-active

    &[disabled]
      background $orangeHot
      opacity .25

  &.-blueDim
    color $white
    background $blueDim

    &:hover
      background $blueDim-hover

    &:active
      background $blueDim-active

    &[disabled]
      background $blueDim
      opacity .25
      opacity .25

  &.-white
    border 1px solid $grey-light
    color $grey
    background $white

    &.-medium
      padding 12px 48px 13px

    &:hover
      border-color $grey

    &:active
      border-color $grey
      background $grey-lightest-medium

    &[disabled]
      border-color $grey-light
      opacity .25

  &.-twiter
    color $white
    background #1DA1F2

    &:hover,
    &:active
      background #11a5ff

    &[disabled]
      opacity .25

  &.-facebook
    color $white
    background #3C5B96

    &:hover,
    &:active
      background #41619c

    &[disabled]
      opacity .25

  &.-pinterest
    color $white
    background #C7252D

    &:hover,
    &:active
      background #d4222b

    &[disabled]
      opacity .25

.logo-default
  &.-large
    svg
      width 280px

  .logo-text
    fill $blue-dark

  .logo-pic
    fill $red

.input-block
  position relative

  &:hover
    .input
      border-color $grey-light

  .input
    width 100%
    padding 4px 24px 4px 12px
    border 2px solid $grey-lighter
    background $grey-lighter
    border-radius 4px
    font-size 16px
    font-weight 500
    color $grey-light-medium
    -webkit-appearance none
    transition border-color .15s ease-in-out

    +placeholder()
      color $grey-light-medium
      font-size 16px
      font-weight 500

    &:focus
      border-color $violet-border

  .input-icon
    position absolute
    right 12px
    top 50%
    transform translate(0, -50%)
    cursor pointer
    opacity .17
    transition opacity .15s ease-in-out

    svg
      fill #000

    &:hover
      opacity .25


@media (max-width 620px)
  .btn
    &.-large
      font-size 20px
      letter-spacing 0
      line-height 30px
      padding 16px 48px 10px
      font-weight 600

    &.-aboveMediumLarge
      font-size 19px
      padding 14px 30px 14px
      letter-spacing -.75px

    &.-social
      padding 15px 24px 15px 42px

    &.-smallMedium
      padding 8px 16px

    &.-smallMedium
      &.-white
        border-width 0

        &.-alwaysWithBorder
          border-width 1px

      &.-dropbox-btn
        border-width 1px
        max-width 136px
        padding-left 54px !important

.radio-input
  cursor pointer
  display flex
  align-items center

  input
    display none

    &:checked
      + .radio-circle:before
        display block

  .radio-circle
    display inline-block
    background $grey-lightest-main
    width 24px
    height 24px
    border-radius 50%
    position relative
    margin-right 14px
    box-sizing border-box
    border-color transparent
    transition border-color .15s ease-in-out

    &:before
      content ''
      display none
      width 12px
      height 12px
      background $violet-border
      border-radius 50%
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)

  &:hover
    .radio-circle
      border 2px solid $violet-border

.checkbox-input
  cursor pointer
  display flex

  &:hover
    .checkbox-square
      border 2px solid $violet-border

  input
    display none

    &:checked
      + .checkbox-square
        svg
          display block

  .checkbox-square
    display block
    background $grey-lightest-main
    flex 0 0 24px
    border-radius 4px
    width 24px
    height 24px
    position relative
    margin-right 20px
    box-sizing border-box
    border-color transparent
    transition border-color .15s ease-in-out
    margin-top 4px

    svg
      display none
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)

  .checkbox-content
    display block

.connected-block-wrapper
  position relative

  .connected-block-content
    position relative
    display flex
    align-items center
    height 64px
    width 100%
    padding 0 22px
    box-sizing border-box
    color $grey
    font-size 18px
    line-height 32px
    font-weight 500
    border-radius 4px
    border 1px solid $grey-light
    cursor pointer
    transition color .15s ease-in-out, border-color .15s ease-in-out, background .15s ease-in-out

    &:not(.-connected)
      cursor pointer
      &:hover
        border-color $grey

      &:active
        border-color $grey
        background $grey-lightest-medium

    &.-connected
      border-color $grey-lightest-main
      background $grey-lightest-main

      .connected-block-remove
        display flex

  .connected-block-icon
    width 25px
    margin-right 20px

  .connected-block-remove
    display none
    position absolute
    right 12px
    top 50%
    transform translate(0, -50%)
    cursor pointer
    width 30px
    height 30px
    align-items center
    justify-content center

    svg
      fill $grey-svg
      transition fill .15s ease-in-out

    &:hover
      svg
        fill $grey-light

    &:active
      transform translate(0, calc(-50% + 1px))

  .connected-block-description
    font-size 12px
    line-height 19px
    color $grey-light-medium
    padding-top 12px
    padding-left 2px

#growls-default
  top 80px

.growl-success
  background $green-lighight
  color $white
  width calc(100% + 80px)
  margin -40px -40px 40px
  padding 12px 40px
  box-sizing border-box

@media (max-width 700px)
  .connected-block-wrapper
    .connected-block-content
      font-size 16px
      line-height 24px
      height 56px

    .connected-block-icon
      margin-right 8px

    .connected-block-description
      padding-top 20px

@media
only screen and (-webkit-min-device-pixel-ratio: 1.25),
only screen and ( min--moz-device-pixel-ratio: 1.25),
only screen and ( -o-min-device-pixel-ratio: 1.25/1),
only screen and ( min-device-pixel-ratio: 1.25),
only screen and ( min-resolution: 200dpi),
only screen and ( min-resolution: 1.25dppx)
	.btn.-large
    font-weight 700
