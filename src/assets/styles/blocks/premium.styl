.premium-controls
  display flex
  margin -9px 0 40px

  &.-tablet
    display none

  .compatibility
    flex 0 0 50%

  .items-selector
    flex-shrink 1
    flex-grow 1

    .result
      border-right-width 0
      border-radius 4px 0 0 4px

  .compatibility
    border-radius 0 4px 4px 0

@media (max-width 992px)
  .premium-controls.-tablet
    display flex

    .compatibility
      border-left none

    .items-selector
      .result
        border-right 1px solid $grey-lighter-medium

      &.-active
        .result
          border-radius 4px 0 0 0

@media (max-width 700px)
  .premium-controls
    margin -2px 0 40px

    .compatibility
      display none

    .items-selector .result
      border-right-width 1px
      border-radius 4px
