.aside-info

  .aside-info-headline
    font-size 15px
    font-weight 500
    text-align center
    margin 26px 0 21px
    letter-spacing 0

  .aside-info-body
    border-radius 4px
    border 1px solid $grey-lighter-medium
    box-sizing border-box
    padding 9px

  .aside-info-image-wrapper
    display block
    overflow hidden
    margin-bottom 12px

    // &:hover
    //   .aside-info-image
    //     transform scale(1.2)

    &:last-child
      margin-bottom 0

  .aside-info-image
    width 100%
    transition transform .25s ease-in-out

  .aside-info-link-wrapper
    text-align center

  .aside-info-link
    display inline-block
    padding 4px 0
    linkDefault()
    font-size 15px
    text-decoration none
    font-weight 500

@media (max-width 620px)

  .aside-info .aside-info-headline
    letter-spacing 0
    margin 27px 0 18px
    font-size 17px
